rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && (
        (exists(/databases/(default)/documents/coaches/$(request.auth.uid)) && get(/databases/(default)/documents/coaches/$(request.auth.uid)).data.role == 'admin') ||
        (exists(/databases/(default)/documents/players/$(request.auth.uid)) && get(/databases/(default)/documents/players/$(request.auth.uid)).data.role == 'admin')
      );
    }

    // Reglas para videos de an치lisis de tiros
    match /shot-videos/{userId}/{videoId} {
      allow read: if request.auth != null && (
        request.auth.uid == userId ||
        // Permitir que coaches vean videos de sus jugadores
        exists(/databases/(default)/documents/players/$(userId)) &&
        get(/databases/(default)/documents/players/$(userId)).data.coachId == request.auth.uid
      );
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // NUEVO: Reglas para videos subidos por el usuario (prefijo 'videos/')
    // El frontend usa rutas del tipo 'videos/{userId}/{filename}.mp4'
    match /videos/{userId}/{fileId} {
      allow read: if request.auth != null && (
        request.auth.uid == userId ||
        (exists(/databases/(default)/documents/players/$(userId)) &&
         get(/databases/(default)/documents/players/$(userId)).data.coachId == request.auth.uid)
      );
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Reglas para im치genes de perfil
    match /profile-images/{userId}/{imageId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Reglas para documentos de an치lisis
    match /analysis-docs/{userId}/{docId} {
      allow read: if request.auth != null && (
        request.auth.uid == userId ||
        // Permitir que coaches vean documentos de sus jugadores
        exists(/databases/(default)/documents/players/$(userId)) &&
        get(/databases/(default)/documents/players/$(userId)).data.coachId == request.auth.uid
      );
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Reglas para ejercicios y materiales de entrenamiento
    match /training-materials/{userId}/{materialId} {
      allow read: if request.auth != null && (
        request.auth.uid == userId ||
        // Permitir que coaches vean materiales de sus jugadores
        exists(/databases/(default)/documents/players/$(userId)) &&
        get(/databases/(default)/documents/players/$(userId)).data.coachId == request.auth.uid
      );
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Adjuntos de tickets: tickets/{ticketId}/{fileId}
    match /tickets/{ticketId}/{fileId} {
      allow read: if isSignedIn() && (
        // Propietario del ticket
        (exists(/databases/(default)/documents/tickets/$(ticketId)) && get(/databases/(default)/documents/tickets/$(ticketId)).data.userId == request.auth.uid) ||
        isAdmin()
      );

      // Escribir solo si es el due침o del ticket
      allow write: if isSignedIn() && (
        exists(/databases/(default)/documents/tickets/$(ticketId)) && get(/databases/(default)/documents/tickets/$(ticketId)).data.userId == request.auth.uid
      );
    }
  }
}

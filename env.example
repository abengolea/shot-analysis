# Firebase Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=TU_API_KEY_AQUI
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=TU_PROJECT_ID.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=TU_PROJECT_ID
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=TU_PROJECT_ID.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=TU_SENDER_ID
NEXT_PUBLIC_FIREBASE_APP_ID=TU_APP_ID

# Firebase Admin SDK (Necesario para funciones del servidor)
# Obtén estas credenciales desde la consola de Firebase > Configuración del proyecto > Cuentas de servicio
FIREBASE_ADMIN_PROJECT_ID=shotanalisys
FIREBASE_ADMIN_CLIENT_EMAIL=firebase-adminsdk-xxxxx@shotanalisys.iam.gserviceaccount.com
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nTU_CLAVE_PRIVADA_AQUI\n-----END PRIVATE KEY-----\n"

# Google Cloud Storage (opcional, para funciones avanzadas)
GOOGLE_CLOUD_PROJECT=shotanalisys

# Mercado Pago (Argentina)
MP_ACCESS_TOKEN_AR=TEST-XXXXXXXXXXXXXXXXXXXXXXXX
MP_WEBHOOK_URL=https://tu-dominio.com/api/payments/webhook
MP_BASE_URL=https://api.mercadopago.com
MP_SPONSOR_ID=TU_MP_PLATFORM_USER_ID
MP_CLIENT_ID=TU_MP_CLIENT_ID
MP_CLIENT_SECRET=TU_MP_CLIENT_SECRET
MP_OAUTH_REDIRECT_URI=https://tu-dominio.com/api/mp/oauth/callback
MP_CLIENT_ID=TU_MP_CLIENT_ID
MP_CLIENT_SECRET=TU_MP_CLIENT_SECRET
MP_OAUTH_REDIRECT_URI=https://chaaaas.com/api/mp/oauth/callback

# App URL y entorno (emails y redirects: local → localhost, staging → URL staging, prod → chaaaas.com)
# Local: PORT define el puerto (ej. 9999). Staging: APP_ENV=staging + NEXT_PUBLIC_APP_URL_STAGING. Prod: NEXT_PUBLIC_APP_URL
PORT=9999
NEXT_PUBLIC_APP_URL=https://www.chaaaas.com
# NEXT_PUBLIC_APP_URL_STAGING=https://tu-backend-stagin--shotanalisys.us-east4.hosted.app
# APP_ENV=staging

# Resend (emails) – local: .env.local; producción: Secret Manager (RESEND_API_KEY, RESEND_FROM, RESEND_REPLY_TO)
# RESEND_API_KEY=re_xxxx
# RESEND_FROM=Nombre <noreply@tudominio.com>
# RESEND_REPLY_TO=soporte@tudominio.com

# SMTP (emails salientes)
SMTP_HOST=email-smtp.sa-east-1.amazonaws.com
SMTP_PORT=587
SMTP_USER=TU_USUARIO_SMTP
SMTP_PASS=TU_PASSWORD_SMTP
FROM_EMAIL=no-reply@chaaaas.com
# Emails del admin para notificaciones (separar por coma)
ADMIN_NOTIFICATION_EMAILS=admin@chaaaas.com

# Pose service (Cloud Run) - endpoint completo, ej: https://pose-economy-xxxxx-uc.a.run.app/pose
POSE_SERVICE_URL=

# Path to ONNX model for analyze endpoint (optional; if not set, fallback heuristics are used)
TCN_ONNX_PATH=